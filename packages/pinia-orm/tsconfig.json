{
  "include": ["src/global.d.ts", "src/**/*.ts", "__tests__/**/*.ts"],
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es2017",
    "types": ["@types/uuid", "@types/node"]
  },
  "exclude": [
    "**/dist",
    "**/node_modules",
  ]
}
